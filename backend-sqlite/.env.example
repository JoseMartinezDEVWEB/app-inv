# Servidor
NODE_ENV=development
PORT=4000

# Base de Datos SQLite
DATABASE_PATH=./database/inventario.db
DATABASE_BACKUP_PATH=./database/backups

# JWT
JWT_SECRET=tu_secreto_super_seguro_cambiar_en_produccion
JWT_EXPIRES_IN=365d
JWT_REFRESH_SECRET=otro_secreto_para_refresh_cambiar_en_produccion
JWT_REFRESH_EXPIRES_IN=365d

# CORS - Múltiples orígenes separados por comas
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# QR Codes
QR_EXPIRATION_HOURS=90d

# PDF
PDF_LOGO_PATH=./assets/logo.png

# Backup automático
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL_HOURS=24
